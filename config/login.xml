<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans        http://www.springframework.org/schema/beans/spring-beans-4.3.xsd        http://dubbo.apache.org/schema/dubbo        http://dubbo.apache.org/schema/dubbo/dubbo.xsd">
    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:reference id="roomService" check="false" interface="org.pot.core.service.RoomService" url="dubbo://127.0.0.1:20880"/>
    <!-- 声明需要暴露的服务接口 -->
    <dubbo:service interface="org.pot.core.service.LoginService" ref="loginService" timeout="200000" retries="10" group="gs3"/>
    <!-- 和本地bean一样实现服务 -->
    <bean id="loginService" class="org.pot.login.service.DefaultLoginService" />
</beans>