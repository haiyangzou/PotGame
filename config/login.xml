<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans        http://www.springframework.org/schema/beans/spring-beans-4.3.xsd        http://dubbo.apache.org/schema/dubbo        http://dubbo.apache.org/schema/dubbo/dubbo.xsd">

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="">
        <dubbo:parameter key="qos.enable" value="false"/>
    </dubbo:application>
    <dubbo:consumer check="false"/>
    <!-- 使用multicast广播注册中心暴露服务地址 -->
    <dubbo:registry address="zookeeper://144.34.169.171:2181" />

    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol id="login" name="dubbo" port="20881" host="127.0.0.1" />

    <dubbo:reference id="roomService" check="false" interface="org.pot.core.service.RoomService" url="dubbo://127.0.0.1:20880"/>
    <!-- 声明需要暴露的服务接口 -->
    <dubbo:service interface="org.pot.core.service.LoginService" ref="loginService" protocol="dubbo" timeout="200000" retries="1" group="gs3"/>
    <!-- 和本地bean一样实现服务 -->
    <bean id="loginService" class="org.pot.login.service.DefaultLoginService" />
</beans>